<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.urbanairship.util.UAStringUtil" />

        <variable
            name="message"
            type="com.urbanairship.chat.ChatMessage" />

        <variable
            name="createdOn"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/UrbanAirship.Chat.Message.Bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/chat_bubble"
            style="@style/UrbanAirship.Chat.Message.Bubble.Received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/message_text"
                style="@style/UrbanAirship.Chat.Message.Body.Received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{message.text}"
                android:visibility="@{UAStringUtil.isEmpty(message.text) ? View.GONE : View.VISIBLE}"
                tools:text="Hello there! I hope you are having a wonderful day. You are the best and deserve only great things." />

            <ImageView
                android:id="@+id/message_attachment"
                style="@style/UrbanAirship.Chat.Message.Attachment"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:contentDescription="@string/ua_chat_attachment_content_description"
                android:visibility="@{UAStringUtil.isEmpty(message.attachmentUrl) ? View.GONE : View.VISIBLE}"
                tools:src="@drawable/ua_ic_image_placeholder"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/message_created_at"
                style="@style/UrbanAirship.Chat.Message.Time.Received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{createdOn}"
                tools:text="2:41 PM" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
