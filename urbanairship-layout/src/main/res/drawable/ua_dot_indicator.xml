<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true"
    android:enterFadeDuration="@integer/material_motion_duration_short_1"
    android:exitFadeDuration="@integer/material_motion_duration_short_1">

    <item android:id="@+id/unchecked"
        android:state_checked="false"
        android:drawable="@drawable/ua_dot_indicator_default"/>
    <item android:id="@+id/checked"
        android:state_checked="true"
        android:drawable="@drawable/ua_dot_indicator_checked"/>
</animated-selector>
