{
  "version": 1,
  "context": {
    "content_types": []
  },
  "presentation": {
    "type": "modal",
    "default_placement": {
      "size": {
        "width": "auto",
        "height": "auto",
        "max_height": "70%",
        "max_width": "80%"
      },
      "shade_color": {
        "hex": "#000000",
        "alpha": 0.6
      }
    }
  },
  "view": {
    "type": "container",
    "border": {
      "radius": 30,
      "stroke_width": 1,
      "stroke_color": {
        "hex": "#cccccc",
        "alpha": 0.8
      }
    },
    "background_color": {
      "hex": "#ffffff",
      "alpha": 1
    },
    "items": [
      {
        "position": {
          "vertical": "center",
          "horizontal": "center"
        },
        "size": {
          "height": "100%",
          "width": "100%"
        },
        "border": {
          "radius": 25
        },
        "view": {
          "type": "pager",
          "identifier": "CAROUSEL_ID",
          "items": [
            {
              "type": "container",
              "background_color": {
                "hex": "#FF0000",
                "alpha": 0.5
              },
              "items": [
                {
                  "position": {
                    "vertical": "center",
                    "horizontal": "center"
                  },
                  "size": {
                    "height": "auto",
                    "width": "auto"
                  },
                  "view": {
                    "type": "label",
                    "text": "This is the first page about stuff.",
                    "alignment": "center",
                    "foreground_color": {
                      "hex": "#000000",
                      "alpha": 1
                    }
                  }
                }
              ]
            },
            {
              "type": "container",
              "background_color": {
                "hex": "#00FF00",
                "alpha": 0.5
              },
              "items": [
                {
                  "position": {
                    "vertical": "center",
                    "horizontal": "center"
                  },
                  "size": {
                    "height": "auto",
                    "width": "auto"
                  },
                  "view": {
                    "type": "label",
                    "text": "More stuff is here on the second page.",
                    "alignment": "center",
                    "foreground_color": {
                      "hex": "#000000",
                      "alpha": 1
                    }
                  }
                }
              ]
            },
            {
              "type": "container",
              "background_color": {
                "hex": "#0000FF",
                "alpha": 0.5
              },
              "items": [
                {
                  "position": {
                    "vertical": "center",
                    "horizontal": "center"
                  },
                  "size": {
                    "height": "auto",
                    "width": "auto"
                  },
                  "view": {
                    "type": "label",
                    "text": "That's not all! There's a third page, too!",
                    "alignment": "center",
                    "foreground_color": {
                      "hex": "#000000",
                      "alpha": 1
                    }
                  }
                }
              ]
            }
          ]
        }
      },
      {
        "size": {
          "height": 48,
          "width": "auto"
        },
        "position": {
          "vertical": "bottom",
          "horizontal": "center"
        },
        "view": {
          "type": "pager_indicator",
          "indicator_spacing": 12,
          "indicator_bindings": {
            "selected": {
              "type": "circle",
              "color": {
                "hex": "#cccccc",
                "alpha": 1
              },
              "radius": 4,
              "border": {
                "stroke_width": 1,
                "stroke_color": {
                  "hex": "#cccccc",
                  "alpha": 1
                }
              }
            },
            "deselected": {
              "type": "circle",
              "color": {
                "hex": "#000000",
                "alpha": 0
              },
              "radius": 4,
              "border": {
                "stroke_width": 1,
                "stroke_color": {
                  "hex": "#cccccc",
                  "alpha": 1
                }
              }
            }
          }
        }
      }
    ]
  }
}
