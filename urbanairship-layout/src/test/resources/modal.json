{
  "modal": {
    "defaultPlacement": {
      "size": {
        "width": "50%",
        "height": "75%"
      },
      "position": {
        "horizontal": "center",
        "vertical": "center"
      }
    }
  },
  "layout": {
    "type": "container",
    "items": [
      {
        "position": {
          "horizontal": "center",
          "vertical": "center"
        },
        "size": {
          "width": "100%",
          "height": "100%"
        },
        "view": {
          "type": "scroll_layout",
          "direction": "vertical",
          "size": {
            "width": "100%",
            "height": "100%"
          },
          "view": {
            "type": "linear_layout",
            "direction": "vertical",
            "items": [
              {
                "margin": {
                  "top": 1,
                  "bottom": 1,
                  "start": 1,
                  "end": 1
                },
                "view": {
                  "type": "media",
                  "url": "https://upload.wikimedia.org/wikipedia/commons/3/35/Tux.svg",
                  "mediaType": "image"
                }
              },
              {
                "margin": {
                  "top": 10,
                  "bottom": 10,
                  "start": 10,
                  "end": 10
                },
                "view": {
                  "type": "label",
                  "text": "Hey",
                  "color": "#333333",
                  "alignment": "center",
                  "textStyles": [
                    "bold",
                    "italic",
                    "underline"
                  ],
                  "fontFamilies": [
                    "Comic Sans MS"
                  ]
                }
              }
            ]
          }
        }
      },
      {
        "position": {
          "horizontal": "end",
          "vertical": "top"
        },
        "size": {
          "width": 75,
          "height": 75
        },
        "view": {
          "type": "image_button",
          "url": "https://testing-library.com/img/octopus-64x64.png",
          "identifier": "myid"
        }
      },
      {
        "position": {
          "horizontal": "center",
          "vertical": "center"
        },
        "margin": {
          "top": 40,
          "bottom": 0,
          "start": 0,
          "end": 0
        },
        "size": {
          "width": "95%",
          "height": "auto"
        },
        "view": {
          "type": "button",
          "identifier": "BUTTON",
          "label": {
            "type": "label",
            "fontSize": 24,
            "color": "#123456",
            "alignment": "center",
            "textStyles": [
              "bold",
              "italic",
              "underline"
            ],
            "fontFamilies": [
              "Comic Sans MS"
            ],
            "text": "BUTTON"
          }
        }
      }
    ]
  }
}
