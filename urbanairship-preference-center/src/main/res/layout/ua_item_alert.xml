<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/UrbanAirship.PreferenceCenter.Item.Alert"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ua_pref_icon"
        style="@style/UrbanAirship.PreferenceCenter.Item.AlertIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="end|center_vertical"
        android:scaleType="centerInside"
        tools:background="@color/ua_preference_center_divider_color"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        style="@style/UrbanAirship.PreferenceCenter.Item.AlertContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ua_pref_title"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Notifications are turned off" />

        <TextView
            android:id="@+id/ua_pref_description"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="You will not receive any notifications from this app." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ua_pref_button"
            style="@style/UrbanAirship.PreferenceCenter.Item.AlertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="Enable"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>
